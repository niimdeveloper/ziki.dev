{% extends 'ZikiMusicBundle::layout.html.twig' %}

{% block content %}
<h1>Track list</h1>

<table class="records_list table-condensed table-striped table-bordered" style="width: 60%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Duration</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('track_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.duration }}</td>
            <td>
                {#<ul>#}
                    {#<li>#}
                        <a href="{{ path('track_show', { 'id': entity.id }) }}">show</a> |
                    {#</li>#}
                    {#<li>#}
                        <a href="{{ path('track_edit', { 'id': entity.id }) }}">edit</a>
                    {#</li>#}
                {#</ul>#}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('track_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
