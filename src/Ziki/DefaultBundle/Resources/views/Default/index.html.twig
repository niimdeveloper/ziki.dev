                                {% for entity in albums %}
                                    {#{{ entity.alias }}<br>#}
                                    <li class="span2">
                                        <div class="">
                                            <a href="{{ path('album_show', { 'id': entity.id }) }}" class="">
                                                <img src=
                                                             {% if entity.image %}
                                                             "/uploads/albums/{{ entity.image }}"
                                                {% else %}
                                                    "{{ asset('bundles/ziki/images/blank-album-pic.jpg') }}"
                                                {% endif %}
                                                class="arti img-rounded"  alt="{{ entity.title }} logo"/>
                                            </a>
