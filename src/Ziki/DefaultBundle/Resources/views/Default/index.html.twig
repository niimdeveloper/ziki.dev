                            <h4 class="muted"><a href="{{ path('artist') }}">Artists</a></h4>
                            {#{% render "ZikiMusicBundle:Artist:index" with {'max': 3} %}#}
                            <ul class="thumbnails">
                                {% for entity in artists %}
                                    {#{{ entity.alias }}<br>#}
                                    <li class="span2">
                                        <div class="">
                                            <a href="{{ path('artist_show', { 'id': entity.id }) }}" class="">
                                                <img src=
                                                             {% if entity.image %}
                                                             "/uploads/artists/{{ entity.image }}"
                                                {% else %}
                                                    "{{ asset('bundles/ziki/images/blank-profile-pic.jpg') }}"
                                                {% endif %}
                                                class="arti img-rounded"  alt="{{ entity.alias }} logo"/>
                                            </a>
                                            <div class="caption">
                                                {#<h3>Thumbnail label</h3>#}
                                                <p><small>{{ entity.alias }}</small></p>
                                                <p><a href="{{ path('artist_show', { 'id': entity.id }) }}" class="label label-warning"><i class="icon-picture icon-white"></i> show</a></p>
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                            {#<hr>#}
                            <h4 class="muted"><a href="{{ path('album') }}">Albums</a></h4>
